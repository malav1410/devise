<h1>Listing articles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Dsc</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.dsc %></td>
    <td><%= link_to 'Show', article %></td>
    <td><%= link_to 'Edit', edit_article_path(article) %></td>
  </tr>
<% end %>
</table>

<br />
<% if can? :manage, @article %>
    <%= link_to 'Create New Article', new_article_path %>
<% end %>